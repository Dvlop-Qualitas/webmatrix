@{
    DateTime hoy=DateTime.Today;
    string nombre="Doña";
    string apellido="Chona";
}

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title></title>
    </head>
    <body>
        <p>Hoy es: @(hoy.ToShortDateString())</p>
        <p>Es cierto que 3 es menor o igual que 4? @(3 <= 4)</p>

        <p>Pregunta 1: @(1 == 1 && 3 ==2)</p>
        <p>Pregunta 1: @(1 == 1 || 3 ==2)</p>
        <p>@(nombre + " " + apellido)</p>
    </body>
</html>
